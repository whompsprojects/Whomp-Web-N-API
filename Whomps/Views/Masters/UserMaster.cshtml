    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .sortable {
            cursor: pointer;
        }

        .bootstrap-tagsinput input {
            width: 100% !important;
        }
    </style>
</head>
<script>
    var GetCommonAutoComplete_DDL_URL = "@Url.Action("GetCommonAutoComplete_DDL", "Common")";
